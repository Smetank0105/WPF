<Window x:Class="WPF_HW3_Notepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_HW3_Notepad"
        mc:Ignorable="d"
        Title="Notepad" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File" FontSize="16">
                <MenuItem Header="New" Click="btnNew_Click"/>
                <MenuItem Header="Open" Click="btnOpen_Click"/>
                <MenuItem Header="Save" Click="btnSave_Click"/>
                <MenuItem Header="Save as" Click="btnSaveAs_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="btnExit_Click"/>
            </MenuItem>
        </Menu>
        <TextBox Name="txtEditor" Grid.Row="1"
                 AcceptsReturn="True" AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                 FontFamily="Times New Roman" FontSize="16" TextWrapping="Wrap"/>
    </Grid>
</Window>
